// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  user
  admin
  modo
}

enum CategoryList {
  Voiture
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  email           String    @unique
  password        String
  pseudo          String    @unique
  first_name      String?
  last_name       String?
  photo_profil    String
  phone           Int?
  role            Role      @default(user)
  created_at      String
  last_connection String    @default("")
  article         Article[]
  favori          Favori[]
  adress          Adress[]
}

model Article {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  created_at  String
  last_update String
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  media       Media[]
  categoryId  String   @db.ObjectId
  category    Category @relation(fields: [categoryId], references: [id])
  favori      Favori   @relation(fields: [favoriId], references: [id])
  favoriId    String   @db.ObjectId
}

model Media {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  articleId String  @db.ObjectId
  article   Article @relation(fields: [articleId], references: [id])
}

model Category {
  id      String       @id @default(auto()) @map("_id") @db.ObjectId
  name    CategoryList
  article Article[]
}

model Favori {
  id      String    @id @default(auto()) @map("_id") @db.ObjectId
  user    User      @relation(fields: [userId], references: [id])
  userId  String    @db.ObjectId
  article Article[]
}

model Adress {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  number  Int
  street  String
  postal  Int
  city    String
  country String
  user    User   @relation(fields: [userId], references: [id])
  userId  String @db.ObjectId
}
